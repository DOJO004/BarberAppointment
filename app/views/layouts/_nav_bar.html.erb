<div class='border absolute top-0'>
  <ul class='flex'>
    <li class='navbar_li'>
      <%= link_to '首頁', root_path %>
    </li>
    <li class='navbar_li'>關於我們</li>
    <li class='navbar_li'>預約</li>
    <% if current_user.nil? %>
      <li class='navbar_li'>
        <%= link_to '登入', new_user_session_path %>
      </li>
      <li class='navbar_li'>
        <%= link_to '註冊', new_user_registration_path %>
      </li>
    <% else %>
      <li class='navbar_li'>
        <%= link_to '登出', destroy_user_session_path(current_user)%>
      </li>
    <% end %>
    <% if current_user && current_user.state === 'admin'%>
      <li class='navbar_li'>
        <%= link_to '後台管理', store_index_path(current_user.email)%>
      </li>
    <% end %>
  </ul>
</div>
